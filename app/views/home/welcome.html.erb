<div  class="container flex flex-col items-center justify-center mx-auto min-h-screen py-8">
  <%= render 'header',
              first_link: link_to('Candidate-se', start_path),
              second_link: link_to('Contrate', new_employer_session_path) 
  %>

  <!-- Main Content -->
  <main class="flex flex-col items-center justify-center w-full px-4 sm:px-6 lg:px-8 mt-24 flex-1 text-center">
    <!-- Title and Description -->
    <section>
      <h1 class="text-5xl font-extrabold text-green-700 mb-6">Bem-vindo ao Feira Vagas</h1>
      <p class="text-lg text-gray-700 mb-6">Conectando talentos e oportunidades em Feira de Santana.</p>
    </section>
    
    <!-- Image -->
    <section class="mb-12">
      <%= image_tag 'img.jpg', alt: 'Descrição da Imagem', class: 'w-full max-w-xl mx-auto' %>
    </section>

    <!-- Action Links -->
    <section>
      <div class="flex space-x-8">
        <%= link_to 'Candidatar-se', start_path, class: 'bg-green-700 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg transition ease-in-out duration-150' %>
        <%= link_to 'Anunciar vaga', new_employer_session_path, class: 'bg-red-700 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition ease-in-out duration-150' %>
      </div>
    </section>
  </main>
</div>
