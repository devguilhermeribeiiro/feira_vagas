<div  class="container flex flex-col items-center justify-center mx-auto min-h-screen py-8">
  <!-- Header -->
  <header class="bg-white shadow-lg w-full fixed top-0 left-0 z-70" >
    <div class="w-11/12 mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center justify-between h-20 sm:h-24 xl:h-24 relative" data-controller="mobile-menu">
        <!-- Brand Logo -->
        <div class="flex-shrink-0 text-2xl sm:text-3xl xl:text-4xl font-extrabold text-green-700">
          <%= link_to 'Feira Vagas', root_path %>
        </div>

        <!-- Hamburger Icon -->
        <button data-action="click->mobile-menu#toggle" class="block lg:hidden px-2 py-1 text-green-700 hover:bg-green-100 rounded-md">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

        <!-- Navigation Links -->
        <div class="lg:flex lg:items-center lg:space-x-4 hidden md:block">
          <%= link_to 'Trabalhe', start_path, class: 'text-green-700 hover:bg-green-100 px-4 py-2 rounded-md text-md font-bold' %>
          <%= link_to 'Contrate', jobs_path, class: 'text-red-700 hover:bg-red-100 px-4 py-2 rounded-md text-md font-bold' %>
        </div>

        <!-- Mobile Menu -->
        <div data-mobile-menu-target="menu" class="lg:hidden fixed inset-0 bg-white z-50 hidden">
          <div class="flex flex-col items-end px-4 py-8">
            <button data-action="click->mobile-menu#toggle" class="self-end px-8 py-2 text-gray-700">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>

            <%= link_to 'Trabalhe', start_path, class: 'text-green-700 hover:bg-green-100 py-2 px-8 p-4 rounded-md text-2xl font-semibold' %>
            <%= link_to 'Contrate', jobs_path, class: 'text-red-700 hover:bg-red-100 py-2 px-8 p-4 rounded-md text-2xl font-semibold' %>
          </div>
        </div>
      </nav>
    </div>
  </header>


  <!-- Main Content -->
  <main class="flex flex-col items-center justify-center w-full px-4 sm:px-6 lg:px-8 mt-24 flex-1 text-center">
    <!-- Title and Description -->
    <section>
      <h1 class="text-5xl font-extrabold text-green-700 mb-6">Bem-vindo ao Feira Vagas</h1>
      <p class="text-lg text-gray-700 mb-6">Conectando talentos e oportunidades em Feira de Santana.</p>
    </section>
    
    <!-- Image -->
    <section class="mb-12">
      <%= image_tag 'img.jpg', alt: 'Descrição da Imagem', class: 'w-full max-w-xl mx-auto' %>
    </section>

    <!-- Action Links -->
    <section>
      <div class="flex space-x-8">
        <%= link_to 'Candidatar-se', start_path, class: 'bg-green-700 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg transition ease-in-out duration-150' %>
        <%= link_to 'Anunciar vaga', new_employer_session_path, class: 'bg-red-700 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition ease-in-out duration-150' %>
      </div>
    </section>
  </main>

  <!-- Footer (Optional) -->
  <footer class="w-full mt-12">
    <div class="text-center text-gray-500 text-sm py-4">
      © 2024 Feira Vagas. Todos os direitos reservados.
    </div>
  </footer>
</div>
