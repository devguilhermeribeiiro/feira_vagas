<div class="container flex flex-col items-center justify-center mx-auto min-h-screen py-8">
  <%= render 'header',
              first_link: link_to('Meu Perfil', job_seeker_path(current_job_seeker)),
              second_link: button_to('Sair', destroy_job_seeker_session_path, method: :delete) 
  %>
  
  <main class="w-11/12 xl:w-full lg:px-8 mt-24 mx-auto grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
    <% @jobs.each do |job| %>
      <%= link_to home_path(job), class: "md:transform md:hover:scale-105 transition-transform duration-200 ease-in-out" do %>
        <div class="bg-white overflow-hidden shadow-lg rounded-lg p-6">
          <%= render 'job', job: job %>
        </div>
      <% end %>
    <% end %>
  </main>
</div>