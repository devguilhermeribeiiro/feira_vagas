<div class="container mx-auto min-h-screen flex flex-col items-center">
  <%= render 'header',
              first_link: link_to('Meu Perfil', job_seeker_path(current_job_seeker)),
              second_link: link_to('Sair', destroy_job_seeker_session_path) %>

  <main class="w-full xl:w-3/4 bg-white shadow-lg rounded-lg p-8 mt-32">
    <%= render 'job_information', job: @job %>
  </main>
  <div class="mt-8">
    <%= link_to 'Voltar para Vagas', start_path, class: 'text-green-600 bg-green-200 hover:bg-green-300  py-3 p-4 rounded-md text-md font-bold' %>
  </div>
</div>
