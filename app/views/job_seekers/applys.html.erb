<div class="container flex flex-col mx-auto items-center justify-center min-h-screen py-8">
  <%= render 'header',
              first_link: link_to('Meu Perfil', job_seeker_path, class: "text-green-600 hover:bg-green-200 px-4 py-2 rounded-md text-md font-bold"),
              second_link: button_to('Sair', destroy_job_seeker_session_path, method: :delete, class: "text-red-600 hover:bg-red-200 px-4 rounded-md text-md font-bold") %>
  <h1 class="text-2xl font-bold text-gray-800">Minhas Candidaturas</h1>

  <main class="w-11/12 xl:w-full lg:px-8 mt-24 mx-auto grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">

    <% @applications.each do |applications| %>
      <%= link_to home_path(applications), class: "md:transform md:hover:scale-105 transition-transform duration-200 ease-in-out" do %>
        <div class="bg-white overflow-hidden shadow-lg rounded-lg p-6">
          <%= render 'job', job: applications %>
        </div>
      <% end %>
    <% end %>
  </main>
</div>