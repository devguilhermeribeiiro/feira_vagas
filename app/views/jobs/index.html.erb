<div class=" container flex flex-col items-center justify-center mx-auto min-h-screen py-8">
  <%= render 'header',
          first_link: link_to('Meu Perfil', employer_path(current_employer)),
          second_link: button_to('Sair', destroy_employer_session_path, method: :delete)%>


  <main class="w-11/12 xl:w-full lg:px-8 mx-auto mt-28">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 text-center font-medium rounded-lg inline-bloc" id="notice"><%= notice %></p>
      <% end %>
      
      <aside class="flex items-end mb-16 justify-end ">
        <%= link_to 'Criar vaga', new_job_path, class: 'bg-green-500 hover:bg-green-600 text-white font-semibold p-3 rounded-md shadow-md'  %>
      </aside>

    <section class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
      <% @jobs.each do |job| %>
        <%= link_to job_path(job), class: "md:transform md:hover:scale-105 transition-transform duration-200 ease-in-out" do %>
          <div class="bg-white overflow-hidden shadow-lg rounded-lg p-6">
            <%= render 'job', job: job %>
          </div>
        <% end %>
      <% end %>
    </section>
  </main>
</div>