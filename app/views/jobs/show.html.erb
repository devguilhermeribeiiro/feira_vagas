

<div class="container mx-auto min-h-screen flex flex-col items-center">
  <%= render 'header',
            first_link: link_to('Meu Perfil', jobs_path),
            second_link: button_to('Sair', destroy_employer_session_path, method: :delete) %>


  <main class="w-full xl:w-3/4 bg-white shadow-lg rounded-lg p-8 mt-32">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-100 mb-5 text-green-500 text-center font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="relative inline-block text-left mt-4">
      <div>
        <button type="button" class="inline-flex justify-between w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none" id="menu-button" aria-expanded="true" aria-haspopup="true">
          Ações
          <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.25 4.25a.75.75 0 01-1.06 0L5.23 8.27a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    
      <div class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
        <div class="py-1" role="none">
          <%= link_to 'Edit this job', edit_job_path(@job), class: 'bg-green-500 hover:bg-green-600 block px-4 py-2 rounded-md text-white font-bold text-md' %>
          <%= button_to 'Destroy this job', @job, method: :delete, class: 'bg-red-500 hover:bg-red-600 block px-4 py-2 rounded-md text-white font-bold text-md' %>
        </div>
      </div>
    </div>
 
    
    <%= render 'job_information', job: @job %>
    
    <div>
      <%= link_to 'Ver candidaturas', applyers_job_path %>
    </div>
  </main>
  
  <div class="mt-8">
    <%= link_to 'Voltar para Vagas', jobs_path, class: 'text-green-600 hover:bg-green-200  py-3 p-4 rounded-md text-md font-bold' %>
  </div>
</div>