<div class="container mx-auto min-h-screen flex flex-col items-center">
  <%= render 'header',
            first_link: link_to('Meu Perfil', employer_path(current_employer)),
            second_link: button_to('Sair', destroy_employer_session_path, method: :delete) %>
  
  
  <hero class="w-11/12 xl:w-full lg:px-8 mx-auto flex flex-col gap-20 mt-48 ">
    <h2 class="text-center text-2xl font-semibold text-green-600">Todas as candidaturas</h2>
     
    <section class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
      <% @applyers.each do |applyer| %>
        <%= link_to applyer_job_path(job_seeker_id: applyer.id) do %>
          <div class="p-4 flex flex-col gap-3 rounded-md bg-white shadow-md text-start">
            <h2 class="text-xl font-semibold text-gray-800"><%= applyer.full_name %></h2>
            <p class="text-gray-600 font-medium"><strong>Formação:</strong> <%= applyer.degree%></p>
            <p class="text-gray-600 font-medium"><strong>Email:</strong> <%= applyer.email %></p>
          </div>
        <% end %>
      <% end %>
    </section>
  </hero>
</div>