<div class="flex flex-col items-center space-y-6">
  <div class="w-52 h-52 rounded-full bg-gray-200 flex items-center justify-center">
    <% if @employer.profile_img.attached? %>
      <%= image_tag @employer.profile_img, alt: "Foto de Perfil", class: "rounded-full object-cover w-full h-full" %>
    <% else %>
      <p>No image</p>
    <% end %>
  </div>

  <div class="text-center">
    <h2 class="text-2xl font-bold text-gray-800"><%= @employer.company_name %></h2>
    <p class="text-gray-500"><%= @employer.email %></p>
    <p class="text-gray-500"><%= link_to @employer.site, "https://#{@employer.site}", target: "_blank" %></p>
    <p class="text-gray-500"><%= @employer.phone %></p>
    <p class="text-gray-500"><%= @employer.location %></p>
  </div>
</div>
