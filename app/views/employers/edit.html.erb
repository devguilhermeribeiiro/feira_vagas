<div class="container flex flex-col mx-auto items-center justify-center min-h-screen py-8">
  <%= render 'header',
              first_link: link_to('Meu Perfil', employer_path, class: "text-green-600 hover:bg-green-200 px-4 py-2 rounded-md text-md font-bold"),
              second_link: button_to('Sair', destroy_employer_session_path, method: :delete, class: "text-red-600 hover:bg-red-200 px-4 py-2 rounded-md text-md font-bold") %>
  
  <main class="w-11/12 xl:w-3/4 bg-white shadow-lg rounded-lg p-8 mt-24">
    <%= render 'form', employer: @employer %>
  </main>

  <section class="mt-6 text-center">
    <%= link_to 'Voltar para vagas', jobs_path, class: "text-green-600 hover:underline py-3 px-4 rounded-md text-md font-bold" %>
  </section>
</div>
